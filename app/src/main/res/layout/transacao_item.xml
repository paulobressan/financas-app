<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                   android:layout_height="wrap_content" android:id="@+id/transacao_item"
                                   android:layout_marginTop="2dp" android:layout_marginBottom="2dp"
                                   android:layout_marginEnd="4dp" android:layout_marginStart="4dp"
                                   android:layout_marginLeft="4dp" android:layout_marginRight="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="8dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/icone_transacao_item_despesa"
                android:id="@+id/imgvItem" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:padding="8dp"
                android:contentDescription="@string/img_item"/>
        <TextView
                android:text="@string/item_descricao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtvItemDescricao" app:layout_constraintStart_toEndOf="@+id/imgvItem"
                android:layout_marginStart="8dp" android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtvItemData" app:layout_constraintStart_toEndOf="@+id/imgvItem"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/txtvItemValor"
                android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/txtvItemDescricao"
                android:layout_marginTop="8dp" android:text="@string/item_data"/>
        <TextView
                android:text="@string/valor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtvItemValor" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtvItemDescricao" android:layout_marginTop="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>